/**app.wxss**/
page{ 
   width: 100%;
   height: 100%;
   
 }
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 2%;
}
/*公共组件样式*/
.serch_box , .tabcardone{
  width: 100%;
}

#waiter {
  width: 100%;
  border-bottom: 15rpx solid#F6F7F9;
}

#waiter .waiter_item {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-bottom: 20rpx;
}

#waiter .waiter_item .waiter_img {
  width: 35%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

#waiter .waiter_item .waiter_img image {
  width: 98%;
  height: 98%;
}

#waiter .waiter_item .waiter_msg {
  height: 100%;
  width: 65%;
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

#waiter .waiter_item .waiter_msg view {
  padding: 3rpx 0;
}

#waiter .waiter_item .waiter_msg .price {
  color: #ec8401;
  font-size: 25rpx;
  padding-left: 50rpx;
}

#waiter .waiter_item .waiter_msg .msg_info {
  font-size: 30rpx;
  font-weight: bold;
}



#waiter .waiter_item .waiter_msg .msg_skill {
  font-size: 24rpx;
  color: #999;
}

#waiter .waiter_item .waiter_msg .msg_badge text {
  font-size: 20rpx;
  color: #ec8401;
  margin-right: 10rpx;
  padding: 2rpx 8rpx;
  background: rgba(253, 249, 243, 1);
  border: 1rpx solid rgba(236, 132, 1, 1);
  border-radius: 6rpx;
}

#waiter .waiter_item .waiter_msg .msg_checked {
  width: 100%;
  height: 36%;
  display: flex;
  margin-top: 20rpx;
  justify-content: start;
  align-items: center;
}

#waiter .waiter_item .waiter_msg .msg_checked button {
  background: #ec8401;
  color: #fff;
  width: 165rpx;
  height: 54rpx;
  margin: 20rpx 0 0 0;
  padding: 0 0;
  line-height: 54rpx;
  font-size: 30rpx;
}