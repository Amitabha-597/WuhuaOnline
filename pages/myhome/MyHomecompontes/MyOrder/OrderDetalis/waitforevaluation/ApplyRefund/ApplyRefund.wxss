.ApplyRefund {
  width: 100%;
  min-height: 100vh;
  background: #F1F2F2;
}

.ApplyRefundline {
  height: 16rpx;
  width: 100%;
}

.ApplyRefund_boxA {
  width: 100%;
  height: 188rpx;
  background: #fff;
  padding: 12rpx 38rpx 16rpx 39rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;


}

.ARB_imgbox {
  width: 160rpx;
  height: 160rpx;
  background: rgb(24, 184, 157);
}

.ARB_contentbox {
  flex: 1;
  height: 160rpx;
  margin-left: 30rpx;
  font-family: SimHei;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.ARB_contentboxA {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.ARB_contentboxB {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
}

.ARB_contentboxC {
  width: 100%;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  color: rgba(153, 153, 153, 1);
  justify-content: space-between;
}

.ARB_contentboxB>text {
  margin-right: 20rpx;
}

.ApplyRefund_boxB {
  width: 100%;
  height: 220rpx;
  background: #fff;
  font-family: SimHei;
  font-weight: 400;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;

}

.ApplyRefund_boxB_title {
  font-size: 30rpx;
  color: rgba(44, 44, 44, 1);
}

.ApplyRefund_boxB_con {
  font-size: 28rpx;
  color: rgba(107, 107, 107, 1);
  display: flex;
  justify-content: space-between;
}

.ApplyRefund_boxC {
  width: 100%;
  padding: 0rpx 30rpx;
  height: 200rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  box-sizing: border-box;
  background: #fff;

}

.ApplyRefund_boxC>view {

  width: 100%;

}

.ApplyRefund_boxCA {
  height: 50%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #F1F2F2;
}

.ApplyRefund_boxCB {
  height: 50%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.ApplyRefund_boxD {
  width: 100%;

  background: #fff;
  padding: 37rpx 32rpx 20rpx 30rpx;
  box-sizing: border-box;
}

.ApplyRefund_boxD_title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  display: flex;
  justify-content: flex-start;
}

.ApplyRefund_boxD_content {
  font-size: 28rpx;
}

.ApplyRefund_boxD_title>view {
  width: 155rpx;
}

.ApplyRefund_boxD_title>textarea {
  height: 214rpx;
  font-weight: none;
}

.ApplyRefund_boxD_imgbox {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.ApplyRefund_boxD_imgitem {
  width: 150rpx;
  height: 150rpx;
  background: #F1F2F2;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.ApplyRefund_Submit {
  width: 690rpx;
  height: 90rpx;
  background: #F77D44;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 119rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-align: center;
  color: rgba(255, 255, 255, 1);
}

.Refund_Success {
  
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.Refund_Success_item {
  width: 564rpx;
  height: 380rpx;
  background: #fff;
  border-radius: 30rpx;
  display: flex;
flex-direction: column;
align-items: center;
justify-content: space-around;
box-sizing: border-box;
padding: 30rpx 0 37rpx 0 ;

}

.Refund_Success_itemB {
  font-size: 36rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.Refund_Success_itemC {
  width: 487rpx;
  height: 64rpx;
  font-size: 24rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
  line-height: 40rpx;
}
.Refund_SuccessBOX{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
}