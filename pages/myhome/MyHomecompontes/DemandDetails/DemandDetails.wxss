.DemandDetails {
  width: 100%;
  min-height: 100vh;
  background: #F1F2F2;
}

.DemandDetails_header {
  margin: 0 auto;
  width: 690rpx;
  height: 610rpx;
  background: #fff;

}

.swiper {
  width: 100%;
  height: 400rpx;
}

.DemDe_header_title {
  width: 690rpx;
  height: 210rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding-left: 30rpx;
}

.DemDe_header_title>view {
  width: 100%;
}

.DemDe_header_titlec {
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;


}

.DemDe_header_titlec>view {
  width: 125rpx;
  align-items: center;
  height: 40rpx;
  border: 1rpx solid #f1f2f2;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  border-radius: 10rpx;
}

.DemandDetails_user {
  margin: 20rpx auto;
  width: 690rpx;
  height: 256rpx;
  background: #fff;
  font-family: PingFang SC;
  color: rgba(34, 34, 34, 1);
  font-size: 24rpx;

  display: flex;
}

.DemandDetails_user_left {
  height: 100%;
  width: 127rpx;
  font-weight: bold;

}

.DemandDetails_user_Right {
  width: 563rpx;
  height: 100%;
}

.DemandDetails_user_Right>view {
  height: 33.333%;
  width: 100%;
  text-align: left;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.DemandDetails_user_Right>view:nth-child(2) {
  border-bottom: 1rpx solid #f1f1f2;
  border-top: 1rpx solid #f1f1f2;
  height: 33.333%;

}

.around {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-around;
}

.DemandDetails_conent {
  width: 690rpx;
  height: 186rpx;
  margin: 0 auto;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;

}

.DemandDetails_conent_title {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  padding-bottom: 10rpx;
}

.DemandDetails_conent_txt {
  font-size: 24rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
}