/* pages/myhome/MyHomecompontes/Recharge/Recharge.wxss */
.flex_r_between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

view,
text {
  box-sizing: border-box;
}

.my_money {
  width: 100%;
  height: 100rpx;
  border-bottom: 20rpx solid #EDEDED;
  padding: 0 30rpx;
}

.my_money>text:nth-child(1) {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
}

.my_money>text:nth-child(2) {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(236, 133, 2, 1);
}

.money_input {
  padding: 30rpx;
  border-bottom: 1px solid #EDEDED;
  width: 100%;
}

.money_input input {
  font-size: 32rpx;
  text-align: right;
}

.money_num {
  font-size: 28rpx;
  color: rgba(191, 191, 191, 1);
}

.choose_money {
  width: 100%;
  margin: 45rpx auto 10rpx;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 20rpx solid #EDEDED;
  font-size: 30rpx;
  border-radius: 5rpx;
}

.money_con {
  padding: 10rpx 70rpx;
  box-sizing: content-box;
  margin: 20rpx 12rpx;
  background: #EDEDED;
  transition: all 0.5s;
}

.money_con2 {
  padding: 10rpx 70rpx;
  box-sizing: content-box;
  margin: 20rpx 12rpx;
  background: #EC8502;
  color: #fff;
  transition: all 0.5s;
}

.box_list {
  padding: 35rpx 30rpx;
}

.wechat {
  width: 62rpx;
}



.list_title {
  display: flex;
  flex-direction: column;
  margin: 0 0 0 20rpx;
}

.list_title>text:first-child {

  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.list_title>text:last-child {

  font-size: 24rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(191, 191, 191, 1);
}
.gouBox{
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid #EB8402;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}
.Recharge{
  width: 594rpx;
  height: 88rpx;
  background:#F09119 ;
  border-radius: 20rpx;
  margin: 280rpx auto;
  font-size:34rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(255,255,255,1);

}
.center{
  display: flex;
  align-items: center;
  justify-content: center;
}