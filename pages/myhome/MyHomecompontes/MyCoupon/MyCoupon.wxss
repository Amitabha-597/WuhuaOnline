.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.title {
  width: 100%;
  height: 93rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.titleSel {
  height: 93rpx;
  width: 20%;
  color: #A9A9A9;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: PingFang SC;
  font-weight: bold;
}

.titleSel_name {
  height: 88rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  font-weight: 400;
  justify-content: center;
}

.headerLineSel {
  background: #EC8401;
  height: 4rpx;
  width: 53rpx;
  position: relative;
}

.headerLineUnsel {
  background: #fff;
  height: 4rpx;
  width: 53rpx;
  position: relative;
}

.swiper {
  width: 100%;
  flex: 1;
  height: 100vh;
  overflow: scroll;
}

.coupon_card {
  margin: 30rpx 0 0 0;
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;

}

.coupon_card_left {
  width: 594rpx;
  height: 180rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.coupon_card_left_img {
  width: 100%;
  height: 100%;
}

.coupon_card_left_icon1 {
  position: absolute;
  right: -20rpx;
  top: 50%;
  margin-top: -15rpx;
  width: 35rpx;
  height: 35rpx;
  background: #EC8401;
  border-radius: 50%;
}

.coupon_card_left_text {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}




.coupon_card_left_price {
  width: 30%;
  height: 80%;
  border-right: #EC8401 dashed 2rpx;
  color: #EC8401;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.coupon_card_left_price01 {
  font-size: 50rpx;
  padding-bottom: 6rpx;
}

.coupon_card_left_price02 {
  font-size: 20rpx;
  font-family: SimHei;
  font-weight: 400;
  letter-spacing: 1rpx;
}

.coupon_card_left_msg {
  width: 70%;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.coupon_card_left_msg_name {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #222222;
  padding-bottom: 16rpx;
}

.coupon_card_left_msg_con {

  width: 293rpx;
  height: 72rpx;
  background: rgba(246, 247, 249, 1);
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  text-indent: 16rpx;
  color: #999;
}


.coupon_card_right {
  width: 166rpx;
  height: 159rpx;
  background: #EC8401;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 5rpx;

}

.coupon_card_right>view {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  width: 97rpx;
  height: 42rpx;
  border: 2rpx solid rgba(255, 255, 255, 1);
  border-radius: 30rpx;
}