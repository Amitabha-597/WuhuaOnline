.DowCenter {
  width: 100%;
  background: #EAEBF0;
  height: 100%;
}

.DowCenter_hrader {
  width: 100%;
  height: 235rpx;
  background: #EC9D01;
  border-radius: 0 0 30rpx 30rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.DowCenter_hrader_mun {
  width: 617rpx;
  height: 34rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.DowCenter_hrader_text {
  margin-top: 30rpx;
  margin-bottom: 63rpx;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-family: SimHei;
  letter-spacing: 4rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);

}

.line {
  width: 228rpx;
  height: 5rpx;
  background: #EC8B01;
}

.DowCenter_main {
  width: 690rpx;
  box-sizing: border-box;
  height: 1100rpx;
  margin: 0 auto;
  background: #fff;
  margin-top: -54rpx;
  padding: 24rpx 23rpx 0 23rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);

}

.ShopName {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0;

}

.ShopName2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0;
}

.ShopName2_type {

  font-size: 26rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.ShopNamea_add {
  width: 485rpx;
  padding-left: 20rpx;
  
}

.ShopName2_type>text {
  padding: 9rpx 10rpx;
  border: 2rpx solid #F2F2F2;
  margin-right: 30rpx;
  border-radius: 10rpx;
}

.certificate_main {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 40rpx;
}

.certificate_main_item {
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.certificate_main_item>view {
  margin-top: 20rpx;
}

.certificate_main_item_img {
  width: 288rpx;
  height: 174rpx;
  background: #E4E5E9;
  display: flex;
  align-items: center;
  justify-content: center;
}





















.DowCenter_footer {
  width: 100%;
  height: 143rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;

}

.DowCenter_footer_btn {
  width: 443rpx;
  height: 86rpx;
  background: #EC8401;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(254, 254, 254, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}