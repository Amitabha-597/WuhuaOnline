<view class="MoreInfo">
	<view class="MoreInfo_hrader">
		<view class="MoreInfo_hrader_mun">
			<image style="width:34rpx" src="../DowCenterImg/Step1.png" mode="widthFix"></image>
			<view class="line1"></view>
			<image style="width:34rpx" src="../DowCenterImg/Step201.png" mode="widthFix"></image>
			<view class="line"></view>
			<image style="width:34rpx" src="../DowCenterImg/Step3.png" mode="widthFix"></image>
		</view>
		<view class="MoreInfo_hrader_text">
			<text>店铺资料</text>
			<text>更多资料</text>
			<text>入驻费用</text>
		</view>
	</view>
	<view class="MoreInfo_main">
		<view class="MoreInfo_main_ShopTitle">
			<view>店铺logo</view>
			<view class="MoreInfo_main_ShopAvttar">
				<image style="width:146rpx" src="../DowCenterImg/shopavatar.png" mode="widthFix"></image>
				<image style="width:13rpx;height: 28rpx;margin-left: 13rpx;" src="../DowCenterImg/next.png"></image>
			</view>
		</view>
		<view class="Shopintr">
			<view class="ShopintrTitle">店铺介绍（{{MaxLength}}/200）</view>
			<textarea maxlength="200" class="ShopintrConent" placeholder="介绍一下自己的店铺吧~" bindinput="MaxLength"></textarea>

		</view>
		<view class="uploadIdCard">
			<view class="uploadIdCard_title">上传法人身份证</view>
			<view class="uploadIdCard_box">
				<view class="IdCardPositive">
					<image style="width:288rpx;height:174rpx;margin-bottom: 20rpx;" src="../DowCenterImg/idcard.png"></image>
					<view>上传身份证正面</view>
				</view>
				<view class="IdCardPositive">
					<image style="width:288rpx;height:174rpx;margin-bottom: 20rpx;" src="../DowCenterImg/camera.png"></image>
					<view>上传身份证反面</view>

				</view>


			</view>
		</view>
		<view class="MoreInfo_Boss">
			<view class="MoreInfo_BossItem">
				<text>联系人</text>
				<input placeholder="请输入真实姓名"></input>
			</view>
			<view class="MoreInfo_BossItem">
				<text>联系电话</text>
				<input placeholder="请输入手机号码"></input>
			</view>



		</view>

	</view>
	<view class="MoreInfo_footer">
		<view class="MoreInfo_footer_btn" bindtap="ToPay">下一步
		</view>

	</view>
</view>