.Apply {
  width: 100%;
  height: 100%;
  background: #F5F6F8;
}

.border30 {
  width: 100%;
  height: 30rpx;
}

.Apply_Item {
  box-sizing: border-box;
  margin: 0 auto;
  background: rgba(255, 255, 255, 1);
  border-radius: 8px;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  padding: 0rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.Apply_Info {
  width: 690rpx;
  height: 356rpx;
}

.Apply_Contact {
  width: 690rpx;
  height: 276rpx;
}

.VerCode {
  display: flex;
  align-items: center;
}

.VerCode>input {
  width: 140rpx;
  margin-right: 30rpx;
}

.Apply_ItemTitle {
  font-size: 32rpx;
}

.Apply_ItemName {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}

.Apply_ItemName>input {
  width: 200rpx;
  font-size: 26rpx;

}

.AppliedPosition {
  width: 690rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, 1);
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  box-sizing: border-box;

}

.PositionTitle {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  display: flex;
  justify-content: space-between;
  margin-bottom: 49rpx;
}

.PositionTitleAdd {
  font-size: 28rpx;
  color: rgba(255, 116, 61, 1);
}

.Position {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;

}

.WorkExp {
  margin: 0 auto;
  width: 690rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 1);
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.WorkExpTitle {
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 49rpx;
}

.WorkExpList {
  padding: 22rpx 14rpx;
  box-sizing: border-box;
  width: 630rpx;
  height: 230rpx;
  background: #F5F6F8;
  display: flex;
}

.WorkExpListLeft {
  width: 60rpx;
  height: 100%;
}

.WorkExpListRight {

  width: 570rpx;
  height: 100%;
}

.WorkExpItemdate {
  margin-bottom: 5rpx;
  height: 35rpx;
  width: 100%;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.WorkExpItem {
  margin-bottom: 30rpx;
}

.WorkExpItemdel {
  width: 23rpx;
  height: 22rpx;
  background: darkcyan;
}

.WorkExpItemConent {
  font-size: 28rpx;
}

.Gender {
  position: fixed;
  z-index: 1;
  top: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
 
}
.GenderBox{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.Gender_item {
  width: 610rpx;
  height: 353rpx;
  background: #fff;
  border-radius: 30rpx;


}

.Gender_item>view {
  height: 33.3333%;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #E7E7E8;
}
.Gender_item>view:nth-child(1){
  font-size: 30rpx;
}
.Gender_item>view:last-child{
  border-bottom: none;
}
.Education_item{
  width: 610rpx;
  height: 650rpx;
  background: #fff;
}
.Education_item>view{
  height: 17%;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #E7E7E8;
}
.Education_item>view:first-child{font-size:30rpx ;}
.Education_item>view:last-child{border-bottom: none;}