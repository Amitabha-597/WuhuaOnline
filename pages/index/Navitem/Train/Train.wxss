.Train {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-top: 32rpx;
}

.title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  border-bottom: 1rpx solid #EEEEEE;
  padding-left: 30rpx;
}

.titleSel {
  color: #000;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.titleSel>view {
  height: 50rpx;
  margin-right: 69rpx;
}


.headerLineSel {
  background: #EC8401;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-right: 69rpx;
}

.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-right: 69rpx;
}

.swiper {
  width: 100%;
  flex: 1;
  height: 100vh;
  overflow: scroll;
}

.Train_item {

  width: 100%;


}

.Train_item_conentbox {
  box-sizing: border-box;
  padding: 0 40rpx 0 30rpx;
  height: 339rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.Train_item_conent {
  width: 100%;
  height: 259rpx;
  display: flex;
}

.Train_item_conentImgbox {
  width: 195rpx;
  height: 100%;
}

.Train_item_conentConbox {
  font-family: PingFang SC;
  margin-left: 30rpx;


}

.Train_item_conentCon_title {
  margin-top: 18rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.Train_item_conentCon_info {
  margin-top: 36rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.Train_item_conentCon_operation {
  height: 54rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;

}

.conentCon_operationeva {
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
}

.Train_item_conentCon_operation {
  margin-top: 68rpx;
}

.conentCon_operationeva {
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  background: rgba(246, 247, 249, 1);
}

.conentCon_operationBtn {

  border-radius: 30rpx;
  width: 136rpx;
  height: 54rpx;
  font-size: 28rpx;
  font-family: SimHei;
  font-weight: 400;
  color: #EC8401;
  border: 2rpx solid #EC8401;
  display: flex;
  align-items: center;
  justify-content: center;

}

.Train_item_line {
  width: 100%;
  height: 12rpx;
  background: rgba(248, 248, 249, 1);
}

.Undertheline {
  height: 329rpx;
  width: 100%;
}

.Undertheline_box {
  width: 100%;
  height: 317rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}

.UnderthelineImg {
  width: 195rpx;
  height: 259rpx;
}

.UnderthelineConent {
  margin-left: 30rpx;
  width: 458rpx;
  height: 259rpx;
}

.UnderthelineTitle {
  margin-top: 17rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  line-height: 41rpx;
}

.Underthelineinfo {
  margin-top: 20rpx;
  font-size: 26rpx;
  font-family: SimSun;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 41rpx;
}

.UnderthelineOpe {
  margin-top: 31rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.UnderthelineOpe_txt {
  font-size: 24rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 41rpx;
  padding: 10rpx 13rpx;
  border-radius: 30rpx;
  background:#F6F7F9;
}

.UnderthelineOpe_btn {
  width: 136rpx;
  height: 54rpx;
  font-size: 28rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(236, 132, 1, 1);
  line-height: 41rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #EC8401;
  border-radius: 30rpx;
}