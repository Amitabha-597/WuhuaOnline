.moreshop {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* position: relative; */
}

.shop_type {
  position: fixed;
  z-index: 999;
  right: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);

}



.shop_type_child {
  width: 90%;
  height: 100%;
  background: #fff;
  margin-left: 10%;
  padding-left: 40rpx;
  position: relative;

}

.shop_type_name {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
}

.shop_type_itembox {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.shop_type_item {
  margin: 10rpx 20rpx 10rpx 0;
  width: 194rpx;
  height: 70rpx;
  background: rgb(233, 231, 231);
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.moreshop_search {
  width: 100%;
}

.moreshop_tabcard {
  width: 689rpx;
  height: 134rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;

}

.moreshop_tabcard_item {
  border-radius: 10rpx;
  margin-right: 30rpx;
  background: rgba(246, 247, 249, 1);
  font-size: 24rpx;
  font-family: PingFang SC;
  padding: 10rpx 20rpx;
  background: rgba(246, 247, 249, 1);
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
}

.moreshop_tabcard_item_img {
  width: 14rpx;
  height: 8rpx;
}

.active {
  color: #EC8401;
}



#moreshop_list {
  width: 689rpx;
}

#moreshop_list .goldshop_item {
  position: relative;

}

#moreshop_list .goldshop_item .goldl {
  width: 30rpx;
  height: 38rpx;
  position: absolute;
  top: 0rpx;
  right: 30rpx;

}

#moreshop_list .goldshop_item {
  width: 100%;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 27rpx 0rpx rgba(0, 0, 0, 0.11);
  border-radius: 10rpx;
  padding-bottom: 20rpx;
}

#moreshop_list .goldshop_item image {
  width: 100%;
}

#moreshop_list .goldshop_item .shop_msg {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

#moreshop_list .goldshop_item .shop_msg .shop_msg_text {
  width: 80%;
}

#moreshop_list .goldshop_item .shop_name {
  font-size: 30rpx;
  font-weight: bold;
  padding: 5rpx 10rpx;
}

#moreshop_list .goldshop_item .shop_volume .heart {
  width: 24rpx;
  margin-left: 10rpx;
  height: 20rpx;
  vertical-align: middle;
}

#moreshop_list .goldshop_item .shop_volume text {
  padding: 5rpx 10rpx;
  font-size: 24rpx;
  color: #9a9a9a;
}

#moreshop_list .goldshop_item .shop_msg .shop_goshop {
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
}

#moreshop_list .goldshop_item .shop_msg .shop_goshop button {
  width: 70%;
  height: 50%;
  padding: 0;
  margin: 0;
  font-weight: none;
  background: linear-gradient(0deg, rgba(236, 132, 1, 1), rgba(236, 172, 1, 1));
  border-radius: 2rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.shop_type_itembtn {
  width: 100%;
  height: 96rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;

}

.shop_type_item_rest {
  width: 211rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 4rpx;

}

.shop_type_item_see {
  width: 483rpx;
  height: 100%;
  background: #EC8401;
  color: rgba(254, 254, 254, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 4rpx;
}