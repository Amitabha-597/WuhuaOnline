.activity {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  padding: 0 30rpx;
}

.titleSel {
  color: #EC8401;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(236, 132, 1, 1);
  margin-right:30rpx ;

}
.titleSel>view{
  height: 78rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}


.headerLineSel {
  background: #EC8401;
  height: 6rpx;
  width: 40rpx;
  position: relative;
}

.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
}

.swiper {
  width: 100%;
  flex: 1;
  height: 100vh;
  overflow: scroll;
}

.recordItem {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}