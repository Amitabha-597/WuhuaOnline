.groupdetails_bg {
  width: 100%;
  height: 100%;
  background: #DDDEE1;
  
}

.groupdetails {
  padding: 0 30rpx ;
  box-sizing: border-box;
}

.groupdetails_imgbox {
  width: 690rpx;
  height: 340rpx;

}

.groupdetails_img {
  width: 100%;
  height: 100%;
}

.groupdetails_msgbox {
  background: #fff;
  height: 232rpx;
  padding-left: 27rpx;
  margin-bottom: 20rpx;
}

.groupdetails_msg_name {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  padding: 20rpx 0;
  color: #222222;
}

.groupdetails_msg_price {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  padding-bottom: 20rpx;
}

.groupdetails_msg_price01 {
  font-size: 36rx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #EC8401;
  margin-right: 30rpx;

}

.groupdetails_msg_price011 {
  margin-right: 20rpx;
}

.groupdetails_msg_price02 {
  font-size: 24rpx;
  color: #9A9A9A;
  padding-bottom: 6rpx;
  text-decoration: line-through;
}

.groupdetails_msg_num {
  display: flex;
  justify-content: flex-start;
}

.groupdetails_msg_numpeo {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 78rpx;
  height: 37rpx;
  border: 1rpx solid #EC8401;
  font-size: 25rpx;
  font-family: SimHei;
  font-weight: 400;
  color: #EB8301;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.groupdetails_msg_numpeo_sur {
  font-size: 24rpx;
  color: #9A9A9A;
}

.groupin {
  height: 281rpx;
  background: #fff;
  margin-bottom: 20rpx;
  padding: 17rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.groupin_state {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  padding: 20rpx 0;

}

.groupin_state01 {
  color: #EC8401;
  margin-right: 20rpx;
}

.groupin_time {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #4C4C4C
}

.groupin_time01 {
  margin-right: 10rpx;
}

.groupin_time02 {
  color: #EC8401;
  margin-right: 10rpx;
}

.groupin_icon {
  height: 90rpx;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 20rpx 0;
  overflow: hidden;
  overflow-x: scroll;

}

.groupin_iconchild {
  height: 82rpx;
  width: 82rpx;
  margin-right: 50rpx;
  border-radius: 50%;

}

.groupin_iconchild_img {
  width: 100%;
  height: 100%;
}

.actrules {
  box-sizing: border-box;
  padding: 30rpx 0rpx 30rpx 20rpx;
  width: 100%;
  height: 186rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.actrules_title {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  padding-bottom: 15rpx;
}

.actrules_content {
  font-size: 24rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  padding: 5rpx 0;
}

.group_btns {
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 122rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
 
}

.group_btn0,
.group_btn1 {
  width: 280rpx;
  height: 70rpx;
  border-radius: 35rpx;
  margin: 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 400;
  letter-spacing: 4rpx;
}

.group_btn0 {
  border: 4rpx solid #EC8401;
  color: #EC8401;
}

.group_btn1 {
  background: #EC8401;
  color: #fff;

}