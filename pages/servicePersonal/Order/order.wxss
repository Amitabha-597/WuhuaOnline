.order {
  width: 100%;
  min-height: 100vh;
  background: #f1f2f2;
}

.orderItem {
  width: 100%;
  height: 500rpx;
  background: #fff;
}

.orderItemTitle {
  box-sizing: border-box;
  width: 100%;
  height: 84rpx;
  border-bottom: 1rpx solid #f1f2f2;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  font-family: SimHei;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

.orderItemconect {
  width: 100%;
  height: 220rpx;
  border-bottom: 1rpx solid #f1f2f2;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: SimHei;
  font-weight: 400;
}

.orderItemconectimg {
  width: 160rpx;
  height: 160rpx;
  background: red;
}

.orderItemconectmsg {
  width: 439rpx;
  margin-left: 30rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.orderItemconectmsgtitle {
  width: 100%;
  font-size: 30rpx;
  color: rgba(34, 34, 34, 1);
}

.orderItemconectmsgCompany {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  justify-content: space-between;
  align-items: center;
  display: flex;
}

.orderItemconectmsgdate {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  justify-content: flex-start;
  align-items: center;
  display: flex;
}
.orderItemadress{
  box-sizing: border-box;
  padding:0 40rpx ;
  height: 105rpx;
  width: 100%;
  border-bottom: 1rpx solid #f1f2f2;
  font-size:24rpx;
  font-family:SimHei;
  font-weight:400;
  color:rgba(118,118,118,1);
  display: flex;
  align-items: center;
  justify-content: flex-start;
  line-height:40rpx;
}
.orderItemBtn{
  padding: 0 40rpx;
  box-sizing: border-box;
  width: 100%;
  height: 85rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.orderItemBtn>view{
  width: 128rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size:24rpx;
}
.orderItemBtnA{
  border: 1rpx solid #f1f1f2;
  color:#767676 ;
}
.orderItemBtnB{
  border: 1rpx solid #EC8401;
  margin-left: 30rpx;
  color: #EC8401;

}