.Notice {
  width: 100%;
  min-height: 100vh;
  padding-top: 16rpx;
  background: #f1f2f1;

}

.NoticeItem {
  width: 100%;
  height: 186rpx;
  background: #fff;
  margin-bottom: 16rpx;
  padding: 10rpx 44rpx;
  box-sizing: border-box;

}


.NoticeItemtitle {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 40%;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  border-bottom: 1rpx solid #f1f2f1;
}

.NoticeItemconect {
  width: 100%;
  height: 60%;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  letter-spacing: rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
}