.tab-bar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 120rpx;
  background: white;
  padding-top: 10px;
  display: flex;
  flex-direction: row;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  box-shadow: 10px 10px 5px #e4e4e44d;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 20rpx;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 26rpx;
}

.cover-image {
  width: 56rpx;
  height: 56rpx;
}

.tab-bar-item .router-name {
  font-size: 20rpx;
}

.centerImage {
  width: 108rpx;
  height: 108rpx;
  position: absolute;
  top: 15rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
}
